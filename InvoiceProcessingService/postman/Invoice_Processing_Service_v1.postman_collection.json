{
  "info": {
    "name": "Invoice Processing Service (v1)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "b1aa5c1e-ips-v1-collection"
  },
  "item": [
    {
      "name": "Auth \u2013 Get Token (v1)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save access_token to collection variable 'token'",
              "let json = pm.response.json();",
              "pm.collectionVariables.set('token', json.access_token || '');",
              "pm.test('Token present', function () {",
              "  pm.expect(json.access_token).to.be.a('string').and.not.empty;",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/auth/token",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "auth",
            "token"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"demo\",\n  \"password\": \"Passw0rd!\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Invoices \u2013 Submit (v1)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/invoices",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "invoices"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Office supplies\",\n  \"dueDate\": \"{{dueDate}}\",\n  \"supplier\": \"Amazon Business\",\n  \"lines\": [\n    { \"description\": \"Notebooks A5\", \"price\": 4.5, \"quantity\": 10 },\n    { \"description\": \"Pens\", \"price\": 1.2, \"quantity\": 20 }\n  ]\n}"
        }
      },
      "response": []
    },
    {
      "name": "Health \u2013 Live",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health/live",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health",
            "live"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Health \u2013 Ready",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health/ready",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health",
            "ready"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "dueDate",
      "value": "2025-09-15T00:00:00Z"
    }
  ]
}